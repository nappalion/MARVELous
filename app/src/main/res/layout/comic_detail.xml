<?xml version="1.0" encoding="utf-8"?>
<!-- Parent linear layout with vertical orientation -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:text="Spider-Woman (2020)"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <ToggleButton
                android:id="@+id/btnFavorite"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/button_favorite"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView

                android:id="@+id/ivComic"
                android:layout_width="wrap_content"
                android:layout_height="150sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="10sp"
                android:adjustViewBounds="true"
                android:src="@drawable/test_comic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5sp">

                <LinearLayout
                    android:id="@+id/layout_parent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:textStyle="bold"
                            android:text="Published:"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/lblPublished"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="November 17, 2021"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/label2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:textStyle="bold"
                            android:text="Letterer:"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/lblWriter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karla Pacheco"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/label3"
                            android:layout_below="@id/lblPublished"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:textStyle="bold"
                            android:text="Writer:"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/lblPenciler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pere Perez"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/label4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:textStyle="bold"
                            android:text="Cover Artist:"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/lblCoverArtist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unspecified"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnVariants"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/black_transparent_rectangle_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEE VARIANT COVERS"
                android:layout_marginRight="5sp"
                android:textColor="@color/white"
                android:includeFontPadding="false"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/red_arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Reviews:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvTotalReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80/100"
                android:textColor="@color/white"/>

        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_weight="1"
            style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
            android:rating="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/black_transparent_rectangle_button"
                android:textSize="12sp"
                android:minHeight="10dp"
                android:text="Reading"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnBookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textColor="@color/white"
                android:background="@drawable/black_transparent_rectangle_button"
                android:textSize="12sp"
                android:minHeight="10dp"
                android:text="Page: 23/230"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/black_transparent_rectangle_button"
                android:textSize="12sp"
                android:minHeight="10dp"
                android:text="100/100"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/lblDescription"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="30sp"
            android:background="@drawable/black_transparent_rectangle"
            android:text="Description"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>