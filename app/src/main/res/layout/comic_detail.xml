<?xml version="1.0" encoding="utf-8"?>
<!-- Parent linear layout with vertical orientation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivComic"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_margin="40px"
        tools:srcCompat="@tools:sample/avatars" />

    <RelativeLayout
        android:id="@+id/layout_parent"
        android:layout_width="fill_parent"
        android:layout_height="464dp">

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:text="Spider-Woman (2020)" />
        <TextView
            android:id="@+id/label1"
            android:layout_below="@id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:text="Published:" />

        <TextView
            android:id="@+id/lblPublished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label1"
            android:layout_marginLeft="40px"
            android:layout_marginTop="5px"
            android:layout_marginRight="40px"
            android:text="November 17, 2021" />

        <TextView
            android:id="@+id/label3"
            android:layout_below="@id/lblPublished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:text="Writer:" />

        <TextView
            android:id="@+id/lblWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label3"
            android:layout_marginLeft="40px"
            android:layout_marginTop="5px"
            android:layout_marginRight="40px"
            android:text="Karla Pacheco" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTitle"
            android:layout_marginLeft="200px"
            android:layout_marginTop="40px"
            android:layout_toEndOf="@+id/lblPublished"
            android:layout_toRightOf="@+id/label1"
            android:text="Letterer:" />

        <TextView
            android:id="@+id/lblPenciler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label2"
            android:layout_marginLeft="200px"
            android:layout_marginTop="5px"
            android:layout_marginRight="20px"
            android:layout_toRightOf="@id/lblPublished"
            android:text="Pere Perez" />

        <TextView
            android:id="@+id/label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lblPublished"
            android:layout_toRightOf="@+id/label1"
            android:layout_below="@+id/lblPenciler"
            android:layout_marginTop="40px"
            android:layout_marginLeft="200px"
            android:text="Cover Artist:" />

        <TextView
            android:id="@+id/lblCoverArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label4"
            android:layout_marginLeft="200px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@id/lblPublished"
            android:text="Jung-Geun Yoon" />

        <TextView
            android:id="@+id/lblDescription"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_below="@id/lblWriter"
            android:layout_marginLeft="40px"
            android:layout_marginTop="80px"
            android:layout_marginRight="40px"
            android:text="Jung-Geun Yoon" />

    </RelativeLayout>
</LinearLayout>